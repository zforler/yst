/**index.wxss**/
.container{
  width: 100%;
  height: 100%;

}
.shop-top{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(to bottom, var(--t-color) , #FD731C); /* 标准的语法 */
}
.shop-top-search{
  display: inline-flex;
  background-color: #C83929;
  height:25px;
  width:90%;
  padding-left:8px; 
  align-items: center;
  color:#EDDED3;
}
.shop{
  background-color: #eee;
  height: 100%;
}

.index-tip{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10px;
   height:30px;
   width:100%;
   color:#EDDED3;
}
.index-tip-item{
  width:210rpx;
  text-align: center;
  

}
.shop-tip{
 padding-left: 10px;
 height: 30px;
 display: flex;
 align-items: center;
}
.shop-item{
  background-color: #fff;
  margin-bottom: 10px;
}
.shop-item-top{
  display: flex;
  justify-content: space-between;
  padding: 0 10px;
}
.shop-item-info{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.show-item-info-img{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.shop-item-img{
  width: 150rpx;
  height: 150rpx; 
}

.shop-item-imgs{
  display: flex;
  justify-content: space-around;
  padding: 5px;
}
