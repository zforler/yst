/* pages/custom/goodsdetail/goodsdetail.wxss */
@import '../../../common/tabpage.wxss';
.scroll-view{
  height:450rpx;
  width:100%; 
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
}
.scroll-view-item{
  height: 450rpx;
  width:450rpx;
  display: inline-block;
  margin-left:8px;
}
.scroll-view-item:first-child{
  margin-left:15px;
}
.detail-a-c{
  width:100%;
  box-sizing: border-box;
  padding: 0 10px;
}
.detail-a{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height:45px;
}
.detail-price{
  font-size: 55rpx;
  position: relative;

}
.detail-rmb{
  font-size: 25rpx;
  position: absolute;
  top:5px;
  left:0px;
  color:#555;
}
.detail-count{
  color:var(--t-grev-a);
}

.detail-b{
  width:100%;
  height:120px;
}
.detail-des{
  width:580rpx;
   padding: 5px 0;
   height:35px;
   display: -webkit-inline-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  clear: none;
   margin-bottom:10px;
}
.detail-fx{
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  color:var(--t-grev-a);
  float:right;
  margin-top:10px;

}
.detail-cn{
  width:100%;
  
}
.detail-cn{
  width:100%;
  height:50px;
  box-sizing: border-box;
  padding-left: 10px;
  background-color: var(--t-grev-back);
  
}
.detail-cn-a{
  height: 50%;
  display: flex;
  align-items: center;
}
.detail-cn-aa{
  font-size: 22rpx;
  color:var(--t-grev-a);
}
.detial-cn-c{
  margin-right:15px;
}
.detail-goshop{
  width:100%;
  height: 80px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: var(--t-grev-back) 8px solid;
  border-bottom: var(--t-grev-back) 8px solid;
   box-sizing: border-box;
   padding: 0 10px;
}

.detail-gt{
  height: 65px;
  width:255px;
  box-sizing: border-box;
}

.detail-gimg{
  width:55px;
  height:55px;
  float:left;
}
.detail-shopname{
  margin-top: 8px;
}
.detail-ss{
  height: 25px;
  display: flex;
  align-items: center;
  width: 150px;
  float:left;
  margin-left:5px;
}
.detail-shopinfo{
  font-size: 25rpx;
  color:var(--t-grev-a);
} 
.detail-gsb{
  width:90px;
  border:var(--t-color) solid thin;
  color:var(--t-color);
  padding: 8px 15px;
  text-align: center;
}

.detail-it{
  width:100%;
}
.detail-itt{
  display: flex;
  height: 45px;
  justify-content: space-around;
  align-items: center;
  margin-bottom:5px;
}
.detail-it-a{
  width:100%;
  height: 45px;
  /* border-bottom:var(--t-grev-back) 2px solid; */
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.detail-it-m{
  width:100%;
  display: flex;
 flex-flow: wrap;
 box-sizing: border-box;
 padding: 0 10px;

}
.detail-it-im{
  flex-grow: 1;
   margin-bottom: 8px;
}