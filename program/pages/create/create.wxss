/* pages/create/create.wxss */
.container{
    width: 100%;
}
.creat-top-image{
    width: 100%;
}
.creat-top-image{
    width: 100%;
    height: 85px;
}


.create-form{
    width: 100%;
    box-sizing: border-box;
    display:block;
    padding: 5px 10px;    
}
.create-form-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:left;
    min-height: 45px;
    margin-bottom:8px;
    

}
.create-form-item picker{
    width:100%;
}
.create-img{
    width:200rpx;
    height: 200rpx;
    display: block;
}
.create-label{
    color:#ccc;
    font-size:18px; 
    margin-bottom:5px;
}

.create-input-c,.create-shopdesc{
    border:#f0f0f0 thin solid;
    height:100rpx;
 
    width:100%;
    display: block;
}
.create-input-c{
    padding: 0 5px;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color:#999;
}
.create-input-b{
    width: 100%;
    position: relative;
}

.create-input-icon{
    font-size: 18px;
}
.create-input-b>.create-input-icon{
    position: absolute;
    top:3px;
    left:5px;
     color:#999;
}
.create-input{
    display: inline-block;
    margin-left:2px;
    font-size: 18px;
    /* border:red thin solid; */
}
.create-shopdesc{
    font-size: 18px;
     padding: 3px 5px;
     padding-left: 20px;
    box-sizing: border-box;
    height:200rpx;
    word-break: break-all;
    word-wrap: break-word;
}



button[type=primary] {
    /* margin-top:95px; */
    color:#FFFFFF;
    background-color:var(--t-color);
    width:400rpx;
    height:35px;
    line-height: 35px;
}
button[type=primary].create-submit-click{
    color:rgba(0,0,0,0.3);
    background-color:var(--t-color);
    opacity: 0.7
}